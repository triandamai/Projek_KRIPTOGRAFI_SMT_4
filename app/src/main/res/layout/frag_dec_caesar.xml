<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/putih"
    tools:context=".Caesar.Frag_Dec_caesar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Caesar Cipher"
            android:fontFamily="monospace"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textAlignment="center"
            android:textSize="25sp"/>

        <LinearLayout
            android:id="@+id/parent_hasil"
            android:layout_width="match_parent"
            android:layout_above="@+id/parent_plain"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_hasil"
                android:layout_width="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:focusableInTouchMode="true"
                android:hint="Hasil"
                android:backgroundTint="@color/blue"
                />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/parent_plain"
            android:layout_above="@+id/bt_proses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="300dp"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_cipher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:focusable="true"
                    android:fontFamily="monospace"
                    android:backgroundTint="@color/blue"
                    android:hint="Masukkan cipher"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_key"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:hint="key"
                    android:fontFamily="monospace"
                    android:inputType="number"
                    />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/bt_proses"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bottom_rect"
            android:layout_marginStart="10dp"
            android:textColor="@color/putih"
            android:fontFamily="monospace"
            android:text="Decrypt"/>
    </RelativeLayout>
</RelativeLayout>